<resources>

    <style name="NormalTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SmallTextStyle" parent="NormalTextStyle">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="SeekBarAppTheme">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:focusable">true</item>
        <item name="android:progressDrawable">
            @drawable/simple_player_progress_horizontal_holo_dark
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/simple_player_progress_horizontal_holo_dark
        </item>
        <item name="android:thumb">@drawable/simple_player_control_selector_holo_dark</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>

    </style>
</resources>
