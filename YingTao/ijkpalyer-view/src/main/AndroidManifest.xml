<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yt.ijkpalyer_view">

    <application android:allowBackup="true" android:label="@string/app_name"
        android:supportsRtl="true">

        <activity android:name=".ijkplay.activity.PlayerActivity"
            android:screenOrientation="sensorLandscape"
            android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".videoplay.activity.ZZPlayerDemoActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

        <activity android:name=".ijkplay.activity.IjkPlayActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity android:name=".ijkplay.activity.LivePlayActivity"
            android:configChanges="keyboard|orientation|screenSize"/>

    </application>

</manifest>
